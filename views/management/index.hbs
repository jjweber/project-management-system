<div class="row">
    <h1 class="pageTitle">Project Management App</h1>
    <div class="tableContainer">
       
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pills-2D-tab" data-toggle="pill" href="#pills-2D" role="tab" aria-controls="pills-2D" aria-selected="true">2D Projects</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-3D-tab" data-toggle="pill" href="#pills-3D" role="tab" aria-controls="pills-3D" aria-selected="false">3D Projects</a>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-2D" role="tabpanel" aria-labelledby="pills-2D-tab">              
                <h4 class="tableTitle">2D Projects</h4>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Project Name</th>
                            <th scope="col">Status</th>
                            <th scope="col">Due Date</th>
                            <th scope="col">Contractor</th>
                            <th scope="col">Designer</th>
                            <th scope="col">Project Notes</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    {{# each projects2d}}
                        <tr>
                            <td>{{ name }}</td>
                            <td>{{ status }}</td>
                            <td>{{ formatDate dueDate day="numeric" month="numeric" year="numeric" }}</td>
                            <td>{{ contractor }}</td>
                            <td>{{ designer }}</td>
                            <td>{{ notes }}</td>
                            <td>
                                <a class="btn" href="/projects/read/{{ id }}">Read</a>
                                <a class="btn" href="/projects/edit/{{ id }}">Edit</a>
                                <a class="btn" href="/projects/alert/{{ id }}">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>                 
            </div>
            <div class="tab-pane fade" id="pills-3D" role="tabpanel" aria-labelledby="pills-3D-tab">
                <h4 class="tableTitle">3D Projects</h4>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Project Name</th>
                            <th scope="col">Status</th>
                            <th scope="col">Due Date</th>
                            <th scope="col">Contractor</th>
                            <th scope="col">Designer</th>
                            <th scope="col">Project Notes</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    {{# each projects3d}}
                        <tr>
                            <td>{{ name }}</td>
                            <td>{{ status }}</td>
                            <td>{{ formatDate dueDate day="numeric" month="numeric" year="numeric" }}</td>
                            <td>{{ contractor }}</td>
                            <td>{{ designer }}</td>
                            <td>{{ notes }}</td>
                            <td>
                                <a class="btn" href="/projects/read/{{ id }}">Read</a>
                                <a class="btn" href="/projects/edit/{{ id }}">Edit</a>
                                <a class="btn" href="/projects/alert/{{ id }}">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <p>
            <a href="/projects/create" class="btn btn-success createBtn"><i class="fas fa-plus"></i> Add Project</a>
        </p>         
    </div>

</div>